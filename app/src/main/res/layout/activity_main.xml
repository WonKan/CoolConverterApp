<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/gridLayout">

    <EditText
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/enterValueET"
        android:layout_column="1"
        android:layout_weight="1"
        android:focusable="true"
        android:text="@string/enter_value_text_view"
        android:inputType="number"
        android:focusableInTouchMode="true"
        android:layout_row="1" />

    <Spinner
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/convertFromQualifierSpinner"
        android:layout_column="1"
        android:layout_weight="1"
        android:entries="@array/measurement_entries"
        android:layout_row="2" />

    <Spinner
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/convertToQualifierSpinner"
        android:layout_column="1"
        android:layout_weight="1"
        android:entries="@array/measurement_entries"
        android:layout_row="3" />

    <TextView
        android:layout_width="380dp"
        android:layout_height="170dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result_edit_text"
        android:id="@+id/resultTextView"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_row="5"
        android:layout_column="1" />

    <Button
        android:layout_width="380dp"
        android:layout_height="82dp"
        android:text="Convert!"
        android:id="@+id/convertButton"
        android:layout_column="1"
        android:layout_row="7" />

</GridLayout>
